<link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">

<nav class="navbar navbar-inverse bg-faded">
  <p class="navbar-brand mb-0"><i class="em em-fire"></i>Guardian Angel</p>
</nav>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <center><h1>Welcome to Guaridan Angel</h1>

<p>Sign up to get a text when a fire is detected near you</p></center>
<br>

<%= form_for(@user) do |f| %>
      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :latitude%>
      <%= f.text_field :latitude, value: request.location.latitude%>

      <%= f.label :longitude %>
      <%= f.text_field :longitude, value: request.location.longitude %>
      
      <%= f.submit "Get Notifications", class: "btn btn-warning" %>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>

